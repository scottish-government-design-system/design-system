{
    "compilerOptions": {
      "allowJs": false,
      "declaration": true,
      "outDir": "./dist/scripts",
      "lib": [
        "dom",
        "esnext"
      ],
      "module": "NodeNext",
      "moduleResolution": "nodenext",
      "noImplicitAny": true,
      "target": "esnext",
      "types": ["vitest/globals"]
    },
    "include": ["./src/**/*"],
    "exclude": [
      "node_modules/**/*",
      "./src/all.ts"
    ]
}
