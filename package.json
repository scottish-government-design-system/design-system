{
  "name": "@scottish-government/pattern-library",
  "description": "Design System for Scottish public sector websites",
  "version": "0.0.275",
  "author": {
    "name": "mygov.scot Digital Engineering team",
    "email": "mygov-tech-team@gov.scot",
    "url": "https://github.com/scottishgovernment/pattern-library"
  },
  "license": "MIT",
  "scripts": {
    "fractal": "npm run dev; fractal start --sync",
    "dev": "del-cli --force ./dev; npm run sass -- -d; npm run svgsprite -- -d; npm run webpack -- --mode=development --devtool eval-source-map;",
    "postshrinkwrap": "sealant",
    "prepublish": "del-cli --force ./dist; npm run webpack; npm run sass; npm run svgsprite; npm run test",
    "nodesass": "node-sass src --output dist/css --output-style compressed",
    "sass": "node tasks/sass",
    "svgsprite": "node tasks/svg-sprite",
    "test": "karma start ./karma.conf.js",
    "webpack": "webpack"
  },
  "files": [
    "dist",
    "src",
    "LICENSE.txt"
  ],
  "devDependencies": {
    "@babel/cli": "^7.17.6",
    "@babel/core": "^7.17.7",
    "@babel/plugin-transform-runtime": "^7.17.0",
    "@babel/polyfill": "^7.2.5",
    "@babel/preset-env": "^7.16.11",
    "@babel/runtime": "^7.17.7",
    "@frctl/fractal": "^1.5.13",
    "@frctl/nunjucks": "^2.0.14",
    "babel-loader": "^8.2.3",
    "copy-webpack-plugin": "^10.2.4",
    "del-cli": "^4.0.1",
    "istanbul-instrumenter-loader": "^3.0.1",
    "jasmine-core": "^4.0.1",
    "jasmine-jquery": "^2.1.1",
    "karma": "^6.3.17",
    "karma-babel-preprocessor": "^8.0.2",
    "karma-chrome-launcher": "^3.1.1",
    "karma-coverage": "^2.2.0",
    "karma-coverage-istanbul-reporter": "^3.0.3",
    "karma-jasmine": "^4.0.1",
    "karma-jasmine-jquery-2": "^0.1.1",
    "karma-jasmine-matchers": "^5.0.0",
    "karma-mocha-reporter": "^2.2.5",
    "karma-viewport": "^1.0.9",
    "karma-webpack": "^5.0.0",
    "minimist": "^1.2.5",
    "node-sass": "^7.0.1",
    "sass": "^1.49.9",
    "sealant": "^0.1.1",
    "svg-sprite": "^1.5.4",
    "svgxuse": "^1.2.6",
    "webpack": "^5.70.0",
    "webpack-cli": "^4.9.2"
  },
  "browserslist": [
    "defaults"
  ]
}
